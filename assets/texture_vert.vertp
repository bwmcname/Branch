#version 330 core

#define VERTEX_LOCATION 1
#define NORMAL_LOCATION 2
#define COLOR_INPUT_LOCATION 3
#define UV_LOCATION 4
#define MATRIX1_LOCATION 5 // AND 6 7 8
#define MATRIX2_LOCATION 9 // AND 10 11 12


layout(location=VERTEX_LOCATION) in vec2 vert;
layout(location=UV_LOCATION) in vec2 uv;

out vec2 tex_uv;

void main()
{
   tex_uv = uv;
   gl_Position = vec4(vert, 0.0f, 1.0f);
}
