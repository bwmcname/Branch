#version 330 core

#define DEFAULT_COLOR 0
#define BRIGHTNESS 1


uniform sampler2D scene;
uniform sampler2D blur;

in vec2 out_uv;
out vec4 color;

void main()
{ 
   color = vec4(texture2D(blur, out_uv).rgb + texture2D(scene, out_uv).rgb, 1.0);
   //color = vec4(texture2D(blur, out_uv).rgb, 1.0);
}
